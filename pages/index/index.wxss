  padding-top: 5rpx;
}

.crd_fenxiang {
  flex: 2;
  margin-top: 6rpx;
}

.itemize_con {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  margin-top: 50rpx;
}

.itemize_con_v {
  width: 25%;
  text-align: center;
  font-size: 28rpx;
}

.itemize_con_v image {
  width: 70rpx;
  height: 75rpx;
}

.itemize_con_v text {
  font-weight: 700;
}

.user {
  margin-top: 25rpx;
}

.user_tx {
  width: 100rpx;
  height: 100rpx;
  background: rgb(197, 193, 193);
  margin: 0 auto;
  border: 1px solid #999;
}


.user_tx image {
  width: 96rpx;
  height: 96rpx;
}

.user_dl {
  margin: 35rpx auto;
}

.user_btn {
  margin: 0 auto;
  width: 250rpx;
  font-size: 30rpx;
  border-radius: 10rpx;
  background: rgb(184, 178, 178);
}

.tc {
  margin: 20rpx 10rpx;
}

.van-popup--center {
  padding-left: 30rpx;
}

.van-button--large {
