  border-radius: 10rpx;
  margin-right: 5rpx;
  padding: 1rpx 3rpx;
}

.crd_amount_i {
  font-size: 24rpx;
  color: rgb(158, 155, 155);
  padding-top: 5rpx;
}

.crd_user {
  font-size: 24rpx;
  color: rgb(158, 155, 155);
  padding-top: 5rpx;
}

.fx {
  display: flex;
}

.crd_amount {
  display: flex;
  flex: 4;
}

.crd_time {
