  font-size: 24rpx;
  border: 4rpx solid rgb(197, 196, 196);
  border-radius: 10rpx;
  margin-right: 5rpx;
  padding-left: 3rpx;
}

.crd_amount_ico {
  width: 40rpx;
  height: 40rpx;
  line-height: 24rpx;
